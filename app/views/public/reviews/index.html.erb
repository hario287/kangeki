<div class='container px-5 px-sm-0 p-3'>
  <%= render 'layouts/errors', obj: @review %>
  <div class='row'>
    <div class='col-md-4'>
      <h5 class="font-weight-bold"><i class="fas fa-user-check" style="color: #9C8D65;"></i><font color="#345362">ログイン中のユーザー</font></h5>
      <%= render 'public/users/info', user: current_user %>
      <h5 class="font-weight-bold"><i class="fas fa-pen" style="color: #9C8D65;"></i><font color="#345362"> 観劇後の感想を投稿しよう</font></h5>
      <%= link_to "新しく投稿する", new_review_path , class: "btn btn-info mr-5" %>
    </div>

    <div class='col-8s offset'>
      </br>
      <h2 class="font-weight-bold"><font color="#345362">感想・レビュー</font></h2>
      <span style="font-weight:bold;">並べ替え :</span>
      <%= link_to "新しい順", reviews_path(sort: 'created_at DESC'), class: "btn btn-sm btn-info" %>
      <%= link_to "評価の高い順", reviews_path(sort: 'rate DESC'), class: "btn btn-sm btn-info" %>
      <%= render 'index', reviews: @reviews %>
    </div>
  </div>
</div>