<div class="comment-box shadow-sm">
  <div id="flash_message">
  </div>
  <h5 class="font-weight-bold"><i class="fas fa-comment-dots" style="color: #638c93;"></i><font color="#345362"> コメントフォーム</h5></font>
  <%= form_with(model: [review, review_comment], local: false) do |f| %>
  <div class="form-body">
    <%= f.text_area :comment, class:"form-control", id: "review_comment_area", rows: '5', placeholder: "ここに入力" %>
  </div>
</div>
  <div class="submit">
    <%= f.submit "送信する", class:"btn btn-info btn-right mt-4" %>
  </div>
  <% end %>
</div>