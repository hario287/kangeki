<div class="container">
  <div class="row text-center">
    <div class="col-7 col-md-3 mx-auto">
      <h2 class="md-3 pt-5"><i class="fas fa-user-check" style="color: #9C8D65;"></i> 新規登録</h2>
        <%= form_with model: @user, url: user_registration_path do |f| %></br>

          <div class="field">
            <%= f.label :name %></br>
            <%= f.text_field :name, placeholder:"Name" %>
          </div>
          <p>
          <div class="field">
            <%= f.label :email %></br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email" %>
          </div>
          <p>
          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 字以上)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password(6文字以上)" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password(確認)" %>
          </div>
          </br>
          <div class="col-10 mx-auto">
            <%= f.submit "Sign Up", class: "btn btn-info btn-sm btn-block mb-3" %>
          </div>
        <% end %>

        <%= render "public/shared/links" %>
    </div>
  </div>
</div>