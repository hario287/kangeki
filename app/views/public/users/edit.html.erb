<!DOCTYPE html>
<div class="container">
  <h2 class="m-0">ユーザー情報編集</h2>
</div>

    <%= form_with model: @user, url: users_information_path, method: :patch, local:true do |f| %>
      <table class="table table-borderless table-sm">
        <div class="field">
          <tr>
          <td><%= f.label :"プロフィール画像" %></td>
          <td>
            <%= f.file_field :profile_image, class: "img_field" %>
            <%= image_tag @user.get_profile_image(200,200), onClick: "$('.img_field').click()", class: "img_prev" %>
          </td>
          </tr>
        </div>

        <div class="field">
          <tr>
          <td><%= f.label :"ユーザーネーム" %></td>
          <td><%= f.text_field :name %></td>
          </tr>
        </div>

        <div class="field">
          <tr>
          <td><%= f.label :"イントロダクション" %></td>
          <td><%= f.text_field :introduction %></td>
          </tr>
        </div>

        <div class="field">
          <tr>
          <td><%= f.label :"地域" %></td>
          <td><%= f.select :user_prefecture, User.user_prefectures.keys, {} %></td>
          </tr>
        </div>

        <div class="field">
          <tr>
          <td><%= f.label :"メールアドレス" %></td>
          <td><%= f.text_field :email %></td>
          </tr>
        </div>

        <div class="field">
         <td><%= f.submit"保存", class: "btn btn-success" %></td>
         <td><%= link_to "退会する", users_unsubscribe_path(current_user) %></td>
        </div>

       </table>
      <% end %>
    </div>
  </div>
</div>