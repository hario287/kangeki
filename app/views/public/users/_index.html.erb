<table class='table table-borderless mt-3'>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= link_to user_path(user) do %>
              <%= user.name %>
            <% end %>さん
        </td>
        <td class= "badge badge-pill badge-info">
          <% if current_user != user%>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id), class: "badge badge-pill badge-info", method: :delete %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), class: "badge badge-pill badge-info", method: :post %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
