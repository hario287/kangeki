<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center px-5 my-3">
      <h3 class="text-dark py-2 mb-0"><i class="fas fa-user-check" style="color: #638c93;"></i> ログイン</h3>
      <%= form_with model: @user, url: user_session_path do |f| %><br>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"メールアドレスを入力", size: "30" %>
        </div>
        </br>
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"パスワードを入力", size: "30" %>
        </div>
        <p>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :"ログイン状態を保存" %>
          </div>
        <% end %>
        </br>
        <div class="col-10 mx-auto">
          <%= f.submit "ログイン", class: "btn btn-info btn-block" %>
        </div>
      <% end %>
      <div class="col-12 mt-5">
        <%= render "public/shared/links" %></div>
    </div>
  </div>
</div>