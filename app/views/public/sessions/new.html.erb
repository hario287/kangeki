<div class="container">
  <div class="row text-center">
    <div class="col-7 col-md-3 mx-auto">
      <h2 class="md-3 pt-5"><i class="fas fa-user-check" style="color: #9C8D65;"></i> ログイン</h2>
      </br>
      <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email" %>
        </div>
        </br>
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password" %>
        </div>
        <p>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        </br>
        <div class="col-7 mx-auto">
          <%= f.submit "Log In", class: "btn btn-info btn-sm btn-block mb-3" %>
        </div>
      <% end %>
        <%= render "public/shared/links" %>
    </div>
  </div>
</div>