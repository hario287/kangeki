<table class='table'>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>タイトル</th>
      <th>トピック</th>
      <th>コメント</th>
      <th>閲覧数</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post_path(post.user) do %>
            <%= image_tag post.user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to post.title,post_path(post.id) %></td>
        <td><%= post.topic.topic_name %></td>
        <td>コメント数 <%= post.post_comments.count %></td>
        <!--<td>閲覧数 < %= post.view_counts.count %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>