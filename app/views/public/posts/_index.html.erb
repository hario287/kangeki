<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>カテゴリー</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to(post.user) do %>
          <%= image_tag review.user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to post.title,post_path(post.id) %></td>
        <td><%= post.body %></td>

        <td id="favorite_buttons_<%= post.id %>">
          <%= render "favorites/favorites", post: post %></td>

        <td>コメント数：<%= post.post_comments.count %></td>

        <td class="view-count">閲覧数: <%= post.view_counts.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>