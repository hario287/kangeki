<%= form_with model:post,local:true do |f| %>
<%= render 'layouts/errors', obj: post %>

  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :image %>
    </div>
    <div class="col-sm-6">
    <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title,"タイトル" %>
    <%= f.text_field :title, class: 'form-control post_title' %>
  </div>

  <div class="form-group">
    <div class="col-sm-2">
    <%= f.label :"カテゴリー" %>
    </div>
    <div class="col-sm-6">
    <%= f.collection_select :category_id, Category.all, :id, :category_name, {prompt: '--選択してください--'}, class: 'form-control category' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :body,"内容" %>
    <%= f.text_area :body, class: 'form-control post_body' %>
  </div>
  <div class="form-group">
    <%= f.submit "投稿する", class: 'btn btn-info' %>
  </div>
<% end %>
