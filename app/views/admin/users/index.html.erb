<div class='container'>
  <div class='row'>
    <div class="d-inline-block px-3 m-3" style="background-color: #eee;">
      <h2 class="m-0">ユーザー一覧</h2>
    </div>

        <table class="table table">
          <thead>
            <tr>
              <th>ユーザーID</th>
              <th>名前</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>
            <% @user.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td>
                  <%= link_to admin_user_path(user), style: "text-decoration: underline;" do%>
                    <%= user.name %>
                  <% end %>
                </td>
                <td><%= user.email%></td>

                <% if user.is_deleted == false %>
          　　　　　　<td class = "text-success font-weight-bold">有効</td>
            	  　<%else%>
          　　　　　　<td class = "text-secondary font-weight-bold">退会</td>
            	  <% end %>

              </tr>
            <% end %>
          </tbody>
        </table>

    <div class="row justify-content-center">
      <%= paginate @user %>
    </div>
  </div>
</div>