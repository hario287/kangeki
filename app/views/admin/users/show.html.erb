<!DOCTYPE html>
<div class="container">
  <div class="row">
    <div class='col-12'>
        <h3 class="m-0">
        <%= @user.name %>さんのユーザー情報</h3>
      </div>

      <table class="table table-borderless">
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100), class: "rounded-circle" %></td>
        </tr>
      <tr>
        <td>ユーザーID</td>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <td>名前</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>自己紹介</td>
        <td><%= @user.introduction %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>ユーザーステータス</td>
        <td colspan='2'>
          <% if @user.is_deleted == true %>
          <div class="text-secondary font-weight-bold">退会</div>
          <% else %>
          <div class="text-success font-weight-bold">有効</div>
          <% end %>
          </td>
      </tr>
        <tfoot>
          <tr>
            <td><%= link_to "編集する", edit_admin_user_path,class: "btn btn-success" %></td>
            <!--<td>< %= link_to "レビュー一覧を見る",,class: "btn btn-primary" %></td>-->
            <!--<td>< %= link_to "投稿一覧を見る",,class: "btn btn-primary" %></td>-->
          </tr>
        </tfoot>
    </table>
  </div>
 </div>
</div>