<table class='table table-sm'>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>公演名</th>
      <th>タグ</th>
      <th>満足度</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% reviews.each do |review| %>
      <tr>
        <td>
          <%= link_to review_path(review.user) do %>
            <%= image_tag review.user.get_profile_image(50,50), class: "rounded-circle" %>
          <% end %>
        </td>

        <td><%= link_to review.stage_name,review_path(review.id) %></td>

        <td class="card-subtitle mb-2 text-muted">
          <%= review.tags.map(&:name).join(', ') %>
        </td>

        <td><%= review.rate %>
        <div id="rate<%= review.id%>"></div></td>
        <script>
        $('#star-rate-<%= review.id %>').empty();
          $('#rate<%= review.id%>').raty({
            size      : 36,
            starOff   : '<%= asset_path('star-off.png') %>',
            starOn    : '<%= asset_path('star-on.png') %>',
            half      : false,
            readOnly: true,
            score: <%= review.rate %>,
          });
        </script>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render "layouts/raty" %>