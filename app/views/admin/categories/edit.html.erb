<div class="container pt-5 px-sm-0">
  <div class="row">
    <h3 style="background-color: #eee;">カテゴリ編集</h3>
  </div>
  <div class="mt-5">
    <%= form_with model: [:admin, @category], local: true do |f| %>
      <div class ="row">
        <div class="col-md-3 text-center">カテゴリー名</div>
        <div class="col-md-3 text-center">
          <%= f.text_field :category_name, autocomplete: "category_name", class:"form-control", placeholder: 'カテゴリー名' %>
        </div>
        <div class="col-md-3 text-center">
          <%= f.submit ' 変更を保存 ', class: "btn btn-sm btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>